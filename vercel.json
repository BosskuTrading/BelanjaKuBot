{
  "version": 2,
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/bot1", "dest": "api/bot1.py" },
    { "src": "/bot2", "dest": "api/bot2.py" }
  ],
  "crons": [
    {
      "path": "/bot2",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/bot2?type=weekly",
      "schedule": "0 0 * * 1"
    },
    {
      "path": "/bot2?type=monthly",
      "schedule": "0 0 1 * *"
    }
  ]
}
